<style>
	nav {
		position: relative;
	}
	.header {
		display: flex;
		justify-content: space-between;
		align-items: center;

		padding: 0.75rem 1rem;
	}

	.internal-links {
		width: 100%;

		position: absolute;

		height: 0;

		background-color: #ffffff;
		transition: height 0.3s ease-in-out;
	}

	.internal-links .menu-link {
		display: none;
		opacity: 0;
	}
	.hamburger {
		display: flex;
		flex-direction: column;
		gap: 6px;

		padding-right: 0;
	}

	.hamburger div {
		width: 100%;
		height: 2px;
		background-color: #333333;
		border-radius: 6px;
		width: 22px;
	}
</style>

