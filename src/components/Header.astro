<script>
	import { gsap } from "gsap";
	const hamburger = document.querySelector(".hamburger");
	const menuContainer = document.querySelector(".internal-links");

	let menuOpen = false;

	// Initialize the timelines without animation
	let menuOpenTl = gsap.timeline({ paused: true, defaults: { ease: "power1.inOut" } });
	let menuCloseTl = gsap.timeline({ paused: true, defaults: { ease: "power1.inOut" } });

	// Define the menu open animation
	menuOpenTl
		.to(menuContainer, { height: `calc(100vh - 56px)` }, 0)
		.to(".menu-link", { display: "block" }, 0.1)
		.to(".menu-link", { opacity: 1 }, 0.5);

	// Define the menu close animation
	menuCloseTl
		.to(".menu-link", { opacity: 0 }, 0)
		.to(".menu-link", { display: "none" }, 0.1)
		.to(menuContainer, { height: "0" }, 0.2);

	hamburger.addEventListener("click", () => {
		if (!menuOpen) {
			menuOpenTl.restart(); // Restart open timeline
			menuOpen = true;
		} else {
			menuCloseTl.restart(); // Restart close timeline
			menuOpen = false;
		}
	});
</script>

