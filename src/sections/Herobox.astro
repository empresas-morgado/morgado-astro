<style>
    section {
        padding: 3rem 1rem;
        background-color: #f3f3f3;
    }
    .section-container {
        max-width: 1216px;
        margin: 0 auto;
    }
    .detail {
        display: flex;
        align-items: center;
        gap: 1rem;
        font-size: 0.875rem;
        font-weight: 500;
    }

    hr {
        width: 4rem;
        border-color: #505050;
    }

    h1 {
        margin-bottom: 1rem;
    }

    p.intro-text {
        margin-bottom: 1.5rem;
    }

    a {
        display: inline-block;
        border: 1px solid #cccccc;
        border-radius: 22px;
        padding: 0.5rem 1rem;

        color: #505050;

        box-sizing: border-box;

        text-decoration: none;
    }

    .descubre-mas {
        display: none;
        padding: 0;
    }

    .slider-hero,
    .slider-hero-mobile{
        margin-bottom: 1rem;
    }


    .slider-hero-mobile img {
        height: auto;
        max-width: 100%;
    }

    .slider-hero-mobile li {
        aspect-ratio: 16 / 9;
    }

    .slider-hero {
        display: none;
    }

    @media only screen and (min-width: 600px) {
        section {
            padding: 4rem 2rem;
        }


        .slider-hero .splide__track {
            overflow: hidden; /* Prevent content overflow */
        }

        .intro {
            display: grid;
            grid-template-areas:
                "detail"
                "heading"
                "texto"
                "button"
                "slider-hero";
        }

        .detail {
            grid-area: detail;
        }

        h1 {
            margin-bottom: 1rem;
            grid-area: heading;
        }

        p.intro-text {
            margin-bottom: 1.5rem;
            grid-area: texto;
        }

        .intro a {
            justify-self: flex-start;
            grid-area: button;
            margin-bottom: 2rem;
        }

        .slider-hero {
            grid-area: slider-hero;
            margin-bottom: 0;
        }

        .descubre-mas {
            display: flex;

            align-items: center;
            gap: 1rem;

            border: none;
            background-color: transparent;
            font-size: 0.875rem;

            color: #505050;

            margin-top: 24px;
        }
    }

    @media only screen and (min-width: 990px) {
        .intro {
            display: grid;
            grid-template-columns: 1fr 1fr;
            grid-gap: 0 3rem;
            grid-template-areas:
                "detail detail"
                "heading texto"
                "heading button"
                "slider-hero slider-hero";
        }

        .slider-hero-mobile {
            display: none;
        }

        .slider-hero {
            display: block;
        }

        .slider-hero .splide__slide img {
            max-height: 333px;
            width: auto; /* Maintain each image's intrinsic width */
            height: auto; /* Ensure proper aspect ratio */
            object-fit: contain; /* Optional for images fitting within bounds */
        }
        h1 {
            min-width: 592px;
        }

        .intro-text {
            max-width: 521px;
            margin-left: auto;
        }

        a {
            margin-left: auto;
        }
    }
</style>

