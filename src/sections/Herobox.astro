<style>
    section {
        padding: 3rem 1rem;
        background-color: #f3f3f3;
    }
    .section-container {
        max-width: 1216px;
        margin: 0 auto;
    }
    .detail {
        display: flex;
        align-items: center;
        gap: 1rem;
        font-size: 0.875rem;
    }

    hr {
        width: 4rem;
        border-color: #505050;
    }

    h1 {
        margin-bottom: 1rem;
    }

    p.intro-text {
        margin-bottom: 1rem;
    }

    a {
        display: inline-block;
        border: 1px solid #cccccc;
        border-radius: 22px;
        padding: 0.5rem 1rem;

        color: #505050;

        box-sizing: border-box;

        text-decoration: none;
    }

    .descubre-mas {
        display: none;
        padding: 0;
    }

    .slider-hero {
        border: 1px solid red;
        height: 200px;
        margin-bottom: 1rem;
    }

    @media only screen and (min-width: 600px) {
        section {
            padding: 4rem 2rem;
        }

        .intro {
            display: grid;
            grid-template-areas:
                "detail"
                "heading"
                "texto"
                "button"
                "slider-hero";
        }

        .detail {
            grid-area: detail;
        }

        h1 {
            margin-bottom: 2rem;
            grid-area: heading;
        }

        p.intro-text {
            margin-bottom: 2rem;
            grid-area: texto;
        }

        .intro a {
            justify-self: flex-start;
            grid-area: button;
            margin-bottom: 2rem;
        }

        .slider-hero {
            grid-area: slider-hero;
            margin-bottom: 0;
        }

        .descubre-mas {
            display: flex;

            align-items: center;
            gap: 1rem;

            border: none;
            background-color: transparent;
            font-size: 0.875rem;

            color: #505050;

            margin-top: 32px;
        }
    }

    @media only screen and (min-width: 990px) {
        .intro {
            display: grid;
            grid-template-columns: 1fr 1fr;
            grid-gap: 0 3rem;
            grid-template-areas:
                "detail detail"
                "heading texto"
                "heading button"
                "slider-hero slider-hero";
        }
        h1 {
            min-width: 592px;
        }

        .intro-text {
            max-width: 448px;
            margin-left: auto;
        }

        a {
            margin-left: auto;
        }
    }
</style>

<section>
