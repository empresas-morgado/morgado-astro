            </div>
        </div>
    </div>
</section>

<script is:inline>
    document.addEventListener("DOMContentLoaded", function () {
        new Splide("#image-carousel", {
            type: "loop",
            perPage: 3,
            focus: "center",
            autoplay: true,
            interval: 4000,
            flickMaxPages: 3,
            updateOnMove: true,
            pagination: false,
            arrows: false,
            padding: "0",
            throttle: 300,
            breakpoints: {
                1440: {
                    perPage: 1,
                    padding: "32.8%",
                },
            },
        }).mount();

        new Splide("#image-carousel-mobile", {
            type: "loop",
            perPage: 1,
            focus: "center",
            autoplay: true,
            interval: 64000,
            pagination: false,
            arrows: false,
        }).mount();
    });
</script>