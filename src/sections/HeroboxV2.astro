<style>
    section {
        background: #f3f3f3;
    }
    .section-container {
        max-width: 1216px;
        margin: 0 auto;
        padding: 3rem 0 3rem 0;
    }

    .small {
        color: #505050;
        text-align: center;
        font-size: 0.8125rem;
        font-weight: 600;
        line-height: 100%;
        letter-spacing: 0.20313rem;
        text-transform: uppercase;
        margin-bottom: 0.5rem;
    }

    h1 {
        margin: 0 auto;
        color: #222973;
        text-align: center;
        font-weight: 400;
        line-height: 107%;
        letter-spacing: -0.06rem;
        margin-bottom: 2rem;
        max-width: 640px;
    }

    .slider-hero.desktop {
        display: none;
    }

    .slider-hero-mobile {
        display: block;
    }

    .slider-hero-mobile .splide__slide img {
        display: block;
        margin: 0 auto;
    }

    .slider-hero-mobile .image-container p {
        text-align: center;
        width: 100%;
        max-width: 592px;
        margin: 0 auto;
    }

    .hero-button {
        display: flex;
        justify-content: center;
        margin-top: 2rem;
    }

    .hero-button a {
        display: flex;
        align-items: center;
        padding: 0.5rem 1.6875rem;

        border-radius: 1.375rem;
        background: #222973;

        color: #fff;
        text-decoration: none;

        gap: 6px;
    }

    @media only screen and (min-width: 600px) {
        .section-container {
            padding: 3rem 1rem 3rem 1rem;
        }
    }

    @media only screen and (min-width: 990px) {
        .slider-hero.desktop {
            display: block;
        }

        .slider-hero-mobile {
            display: none;
        }

        .desktop .image-container p {
            color: #000;
            text-align: center;
            font-family: "Inter", sans-serif;
            font-size: 1rem;
            font-style: normal;
            font-weight: 400;
            line-height: 161%;
            margin-top: 0.5rem;
            opacity: 0;
            transition: opacity 400ms;
        }

        .desktop .splide {
            padding: 20px 0;
        }

        .desktop .splide__slide img {
            display: block;
            width: 100%;
            border-radius: 8px;
            transition: transform 400ms;
            transform: scale(0.85);
            transform-origin: center center;
        }

        .desktop .splide__slide.is-active img {
            transform: scale(1);
        }

        .desktop .splide__slide.is-active p {
            opacity: 1;
        }

        .hero-button {
            margin-top: 1rem;
        }
    }
</style>

